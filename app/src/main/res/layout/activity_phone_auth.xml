<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneAuthActivity">

    <Button
        android:id="@+id/back_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/backarrow"/>

    <TextView
        android:id="@+id/enter_regis"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="67.5dp"
        android:text="@string/enter_regis"
        android:textAppearance="@style/enter_regis"
        android:lineSpacingExtra="8sp"
        android:gravity="center"
        android:translationY="-3.94sp"/>

    <TextView
        android:id="@+id/you_will_re"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="108dp"
        android:text="@string/you_will_re"
        android:textAppearance="@style/you_will_re"
        android:lineSpacingExtra="5sp"
        android:translationY="-2.3sp"
        android:gravity="center_horizontal|top" />

    <LinearLayout
        android:id="@+id/phn"
        android:divider="@drawable/divider"
        android:showDividers="middle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_phone_black_24dp"
            android:layout_marginRight="8dp"
            android:paddingTop="2dp"/>

        <EditText
            android:id="@+id/phoneAuth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:maxLines="1"
            android:maxLength="10"
            android:inputType="phone"
            android:hint="Enter Phone Number"
            android:paddingLeft="8dp"
            android:textSize="14sp"
            android:textColorHint="#CFCDD5"
            android:layout_gravity="center"/>


    </LinearLayout>

    <ProgressBar
        android:id="@+id/ldngbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phn"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>





    <Button
        android:id="@+id/next_phnauth"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:background="@drawable/button_loginsignup"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:text="NEXT"
        android:textColor="#FFFF"
        android:textStyle="bold"
        />




    </RelativeLayout>